{{!-- a completion state appended to each component --}}
<div class="accessibility-state">
	{{#if _isComplete}}
		<span tabindex="0" role="region" class="aria-label a11y-ignore-focus prevent-default" id="buttons-aria-label-complete">{{a11y_normalize displayTitle}} {{_accessibility._ariaLabels.complete}} {{#if _isQuestionType}}{{#if _canShowFeedback}}{{#if _isCorrect}}{{_accessibility._ariaLabels.correct}}{{else}}{{_accessibility._ariaLabels.incorrect}}{{/if}}{{/if}}{{/if}}</span>
	{{else}}
		<span tabindex="0" role="region" class="aria-label a11y-ignore-focus prevent-default" id="buttons-aria-label-incomplete">{{a11y_normalize displayTitle}} {{_accessibility._ariaLabels.incomplete}}</span>
	{{/if}}
</div>